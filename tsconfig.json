{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"] // 提供import.meta.env 上 Vite 注入的环境变量的类型定义
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
